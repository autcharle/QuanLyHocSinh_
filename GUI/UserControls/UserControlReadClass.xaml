<UserControl x:Class="GUI.UserControls.UserControlReadClass"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:GUI.UserControls"
             mc:Ignorable="d" d:DesignWidth="1600"
              Loaded="UserControl_Loaded"
             >

    <Grid Margin="0,0,10,22">
        <Grid.RowDefinitions>
            <RowDefinition Height="125"/>
            <RowDefinition Height="75"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock
            Text="DANH SÁCH LỚP"
                   FontSize="35"
                   FontWeight="DemiBold"
                   Foreground="{StaticResource HeaderColor}"
                   Margin="246,0,268,28"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom" Height="47" Width="276" RenderTransformOrigin="0.489,-0.234" Grid.Row="1"/>
        <Grid 
            Grid.Row="2"
                  HorizontalAlignment="Right" Width="1300" Margin="0,0,10,10"
                  >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="450"></ColumnDefinition>
                <ColumnDefinition Width="800"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <ListView  Name="ListViewClass" HorizontalAlignment="Left" Width="400" Margin="28,0,0,0"  >
                <ListView.View>
                    <GridView ColumnHeaderContainerStyle="{StaticResource GridViewColumnHeaderStyle}">
                        <GridViewColumn Header="STT" >
                            <GridViewColumn.CellTemplate   >
                                <DataTemplate>
                                    <TextBlock  Text="{Binding Class_ID}" VerticalAlignment="Center" Style="{StaticResource ListViewDataTextBlockStyle}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="LỚP" Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate >
                                    <TextBlock  Width="80" Text="{Binding Class_Name}" TextWrapping="Wrap"  Style="{StaticResource ListViewDataTextBlockStyle}" TextAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Stretch" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn  Header="SĨ SỐ" Width="80" >
                            <GridViewColumn.CellTemplate >
                                <DataTemplate>
                                    <TextBlock Width="50" Text="{Binding NumberMember}" Style="{StaticResource ListViewDataTextBlockStyle}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>

                        </GridViewColumn>
                        <GridViewColumn Header="TÙY CHỌN " Width="120">
                            <GridViewColumn.CellTemplate >
                                <DataTemplate >
                                    <Grid >
                                        <Button x:Name="btnXemDS" Content="DSHS" Background="#FF8295C7" HorizontalAlignment="Center" VerticalAlignment="Center" Click="btnXemDS_Click" />
                                    </Grid>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
            <ListView  Grid.Column="1"  Name="ListViewStudentList" HorizontalAlignment="Left" Width="800" >
                <ListView.View>
                    <GridView ColumnHeaderContainerStyle="{StaticResource GridViewColumnHeaderStyle}">
                        <GridViewColumn Header="STT" >
                            <GridViewColumn.CellTemplate   >
                                <DataTemplate>
                                    <TextBlock  Text="{Binding Student_ID}"  VerticalAlignment="Center" Style="{StaticResource ListViewDataTextBlockStyle}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        
            <!--Text="{Binding Class_ID}"-->
            

                        <GridViewColumn Header="HỌ TÊN" Width="200">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate >
                                    <TextBlock  Width="200" Text="{Binding FullName}" TextWrapping="Wrap"  Style="{StaticResource ListViewDataTextBlockStyle}" TextAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Stretch" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn  Header="GIỚI TÍNH" Width="100" >
                            <GridViewColumn.CellTemplate >
                                <DataTemplate>
                                    <TextBlock Width="100" Text="{Binding Gender}" Style="{StaticResource ListViewDataTextBlockStyle}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>

                        </GridViewColumn>
                        <GridViewColumn Header="NĂM SINH" Width="120">
                            <GridViewColumn.CellTemplate >
                                <DataTemplate >
                                    <Grid >
                                        <TextBlock Width="120"  Text="{Binding Birthday}" Style="{StaticResource ListViewDataTextBlockStyle}"/>
                                    </Grid>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="ĐỊA CHỈ" Width="150">
                            <GridViewColumn.CellTemplate >
                                <DataTemplate >
                                    <Grid >
                                        <TextBlock Width="150" Text="{Binding Address}" Style="{StaticResource ListViewDataTextBlockStyle}"/>
                                    </Grid>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="TÙY CHỌN " Width="120">
                            <GridViewColumn.CellTemplate >
                                <DataTemplate >
                                    <Grid >
                                       
                                        <Button x:Name="btnChuyenLop" Content="Chuyển lớp" Background="#FF8295C7" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Grid>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
                

            </ListView>
        </Grid>
        <DockPanel Grid.Row="0"
                    HorizontalAlignment="Center"
                    Width="900">
            <StackPanel
                        DockPanel.Dock="Right"
                        VerticalAlignment="Bottom" Height="115" Width="326"
                        >

                <TextBlock
                   x:Name="NullListMessageTextBlock"
                   HorizontalAlignment="Right"
                   Text="Không có dữ liệu phù hợp với tìm kiếm"
                   Margin="10 5"
                   Foreground="Red"
                   FontSize="14"
                   FontStyle="Italic"
                   Visibility="Hidden"/>
                <TextBox Width="311"
                             Height="56"
                             Margin="5 0"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:HintAssist.Hint="Tìm kiếm..."
                             FontSize="16"
                         x:Name="SearchTextBox"
                             KeyDown="SearchTextBox_KeyDown"/>

            </StackPanel>

            <StackPanel DockPanel.Dock="Bottom"
                    Orientation="Horizontal"
                        Margin="20,10,64,10" Height="55">
                <ComboBox Height="40"
                               Width="160"
                            VerticalAlignment="Bottom"
                               VerticalContentAlignment="Center"
                               materialDesign:HintAssist.Hint="Tất cả khối"
                               FontSize="15"
                               x:Name="ClassGroupComboBox"
                               SelectionChanged="ClassGroupComboBox_SelectionChanged"           
                          Background="White">

                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Class_Group}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <materialDesign:PackIcon VerticalAlignment="Bottom"
                                 Height="35"
                                 Width="35"
                                 Margin="5 2"
                                 Kind="CloseCircleOutline"
                                 Foreground="Gray"
                                 Visibility="Visible"
                                 x:Name="ClearFilterButtonClassGroup" MouseDoubleClick="ClearFilterButtonClass_MouseDown"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</UserControl>
